{
  "name": "cjdavis.charon",
  "description": "front end task runner for bundling and building the ui of my personal website",
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "npm": "^3.5.3",
    "react": "^0.14.6",
    "react-dom": "^0.14.6"
  },
  "devDependencies": {
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "eslint": "^2.2.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.1.0",
    "react-hot-loader": "^1.3.0",
    "webpack": "^1.12.10",
    "webpack-dev-server": "^1.14.0"
  },
  "scripts": {
    "dev-server": "webpack-dev-server --inline --hot --progress --colors --content-base",
    "dev": "webpack --progress --colors --watch",
    "lint": "eslint --ignore-path .gitignore . --ext .js --ext .jsx || true"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "react"
    ]
  }
}
